<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh sửa thiết bị mượn"
        android:textSize="30sp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Spinner
        android:background="@drawable/style_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_sua"
        android:layout_margin="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mã Phòng: "
            android:textSize="18dp"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã phòng học"
            android:textColor="#000"
            android:textSize="16dp"
            android:id="@+id/edtmaP"
            /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mã Thiết Bị: "
            android:textSize="18dp"></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã thiết bị"
            android:textColor="#000"
            android:textSize="16dp"
            android:id="@+id/edtmaTB"
            /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ngày Mượn: "
            android:textSize="18dp"></TextView>
        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:hint="Ngày mượn"
            android:textColor="#000"
            android:textSize="16dp"
            android:id="@+id/edtngay"
            android:enabled="false"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_date"
            android:paddingTop="12dp"
            android:id="@+id/editDate"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Số Lượng: "
            android:textSize="18dp"></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng"
            android:textColor="#000"
            android:textSize="16dp"
            android:id="@+id/edtsoluong"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hình ảnh: "
            android:textSize="18dp"
            ></TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/folder"
            android:background="#FFEB3B"
            android:id="@+id/editImg"
            android:layout_marginLeft="10dp"
            ></ImageView>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:id="@+id/eImg"
        ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:id="@+id/btnhuy"
            android:layout_margin="5dp"
          android:background="@drawable/custom_button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:id="@+id/btnUpdate"
            android:background="@drawable/custom_button1"
            android:layout_margin="5dp"
            />
    </LinearLayout>

</LinearLayout>